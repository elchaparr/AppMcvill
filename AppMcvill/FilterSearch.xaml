<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMcvill.FilterSearch"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="Auto,*">

        <Grid Padding="10"
              ColumnDefinitions="Auto,*,Auto"
              RowDefinitions="Auto"
              Grid.Row="0">

            <Button Text="Limpiar"
                    BackgroundColor="Transparent"
                    TextColor="Red"
                    FontAttributes="Bold"
                    HorizontalOptions="Start"
                    VerticalOptions="Center"
                    FontSize="16"
                    Clicked="Limpiar"
                    Grid.Column="0"/>

            <Label Text="Filtrar Resultados"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="Black"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   Grid.ColumnSpan="3"
                   Margin="0,10"/>

            <Image Source="X.png"
                   WidthRequest="25"
                   HeightRequest="25"
                   HorizontalOptions="End"
                   VerticalOptions="Center"
                   Grid.Column="2">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="Cerrar"/>
                </Image.GestureRecognizers>
            </Image>
        </Grid>

        <VerticalStackLayout Padding="15"
                             Spacing="10"
                             VerticalOptions="Start"
                             HorizontalOptions="Start"
                             Grid.Row="1">

            <Label Text="Ordenar Por:"
                   FontSize="16"
                   FontAttributes="Bold"
                   TextColor="Black"
                   Margin="0,0,0,8"/>

            <HorizontalStackLayout Spacing="4"
                                   VerticalOptions="Center"
                                   HorizontalOptions="Start" >

                <CheckBox x:Name="primero" IsChecked="False"
                          IsEnabled="True"
                          Color="#FF0C5896"
                          VerticalOptions="Center"
                          CheckedChanged="CheckBox_CheckedChanged"/>
                
                <Label Text="Ascendente"
                       FontSize="14"
                       TextColor="Black"
                       VerticalOptions="Center"/>
                
            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="4"
                                   VerticalOptions="Center"
                                   HorizontalOptions="Start">
                
                <CheckBox x:Name="segundo" IsChecked="False"
                          IsEnabled="True"
                          Color="#FF0C5896"
                          VerticalOptions="Center"
                          CheckedChanged="CheckBox_CheckedChanged"/>
                
                <Label Text="Descendente"
                       FontSize="14"
                       TextColor="Black"
                       VerticalOptions="Center"/>
                
            </HorizontalStackLayout>

            <Label Text="Por UM:"
                   FontSize="16"
                   FontAttributes="Bold"
                   TextColor="Black"
                   Margin="0,0,0,8"/>

            <Grid x:Name="GridUM" ColumnDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto"
                  RowDefinitions="Auto,Auto,Auto"
                  ColumnSpacing="12"
                  RowSpacing="10">

                <!-- Fila 1 -->
                <CheckBox x:Name="cmcheck" Grid.Row="0" Grid.Column="0" Color="#FF0C5896" VerticalOptions="Center" CheckedChanged="CheckBox_CheckedChanged"/>
                <Label Grid.Row="0" Grid.Column="1" Text="cm" FontSize="14" TextColor="Black" VerticalOptions="Center"/>

                <CheckBox x:Name="ftcheck" Grid.Row="0" Grid.Column="2" Color="#FF0C5896" VerticalOptions="Center" CheckedChanged="CheckBox_CheckedChanged"/>
                <Label Grid.Row="0" Grid.Column="3" Text="ft." FontSize="14" TextColor="Black" VerticalOptions="Center"/>

                <CheckBox x:Name="incheck" Grid.Row="0" Grid.Column="4" Color="#FF0C5896" VerticalOptions="Center" CheckedChanged="CheckBox_CheckedChanged"/>
                <Label Grid.Row="0" Grid.Column="5" Text="in." FontSize="14" TextColor="Black" VerticalOptions="Center"/>


                <!-- Fila 2 -->
                <CheckBox x:Name="ltscheck" Grid.Row="1" Grid.Column="0" Color="#FF0C5896" VerticalOptions="Center" CheckedChanged="CheckBox_CheckedChanged"/>
                <Label Grid.Row="1" Grid.Column="1" Text="Lts" FontSize="14" TextColor="Black" VerticalOptions="Center"/>

                <CheckBox x:Name="mtscheck" Grid.Row="1" Grid.Column="2" Color="#FF0C5896" VerticalOptions="Center" CheckedChanged="CheckBox_CheckedChanged"/>
                <Label Grid.Row="1" Grid.Column="3" Text="mts" FontSize="14" TextColor="Black" VerticalOptions="Center"/>

                <CheckBox x:Name="pzcheck" Grid.Row="1" Grid.Column="4" Color="#FF0C5896" VerticalOptions="Center" CheckedChanged="CheckBox_CheckedChanged"/>
                <Label Grid.Row="1" Grid.Column="5" Text="PZ." FontSize="14" TextColor="Black" VerticalOptions="Center"/>

            </Grid>

            <Label Text="Por Tipo:"
                   FontSize="16"
                   FontAttributes="Bold"
                   TextColor="Black"
                   Margin="0,0,0,8"/>

            <HorizontalStackLayout Spacing="4"
                       VerticalOptions="Center"
                       HorizontalOptions="Start">

                <CheckBox x:Name="tercero" IsChecked="False"
                          IsEnabled="True"
                          Color="#FF0C5896"
                          VerticalOptions="Center"
                          CheckedChanged="CheckBox_CheckedChanged"/>

                <Label Text="Activo Fijo"
                       FontSize="14"
                       TextColor="Black"
                       VerticalOptions="Center"/>

            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="4"
                       VerticalOptions="Center"
                       HorizontalOptions="Start">

                <CheckBox x:Name="cuarto" IsChecked="False"
                          IsEnabled="True"
                          Color="#FF0C5896"
                          VerticalOptions="Center"
                          CheckedChanged="CheckBox_CheckedChanged"/>

                <Label Text="Herramienta"
                       FontSize="14"
                       TextColor="Black"
                       VerticalOptions="Center"/>

            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="4"
                       VerticalOptions="Center"
                       HorizontalOptions="Start">

                <CheckBox x:Name="quinto" IsChecked="False"
                          IsEnabled="True"
                          Color="#FF0C5896"
                          VerticalOptions="Center"
                          CheckedChanged="CheckBox_CheckedChanged"/>

                <Label Text="MiscelÃ¡neo"
                       FontSize="14"
                       TextColor="Black"
                       VerticalOptions="Center"/>

            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="4"
                       VerticalOptions="Center"
                       HorizontalOptions="Start">

                <CheckBox x:Name="sexto" IsChecked="False"
                          IsEnabled="True"
                          Color="#FF0C5896"
                          VerticalOptions="Center"
                          CheckedChanged="CheckBox_CheckedChanged"/>

                <Label Text="Producto Fabricado"
                       FontSize="14"
                       TextColor="Black"
                       VerticalOptions="Center"/>

            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="4"
                       VerticalOptions="Center"
                       HorizontalOptions="Start">

                <CheckBox x:Name="septimo" IsChecked="False"
                          IsEnabled="True"
                          Color="#FF0C5896"
                          VerticalOptions="Center"
                          CheckedChanged="CheckBox_CheckedChanged"/>

                <Label Text="Suministro"
                       FontSize="14"
                       TextColor="Black"
                       VerticalOptions="Center"/>

            </HorizontalStackLayout>


            <Button x:Name="btnBuscar"
                    Text="Buscar"
                    BackgroundColor="#FF0C5896"
                    TextColor="White"
                    FontAttributes="Bold"
                    HorizontalOptions="Start"
                    VerticalOptions="Center"
                    FontSize="16"
                    Clicked="Buscar"
                    CornerRadius="50"
                    Grid.Column="0"
                    Margin="150, 50, 0, 0"/>
        </VerticalStackLayout>
        

    </Grid>
    
</ContentPage>