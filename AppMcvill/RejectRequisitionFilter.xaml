<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sys="clr-namespace:System;assembly=System.Runtime"
             x:Class="AppMcvill.RejectRequisitionFilter"
             Title="Filtro"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="Auto,*">

        <Grid Padding="10"
          ColumnDefinitions="Auto,*,Auto"
          RowDefinitions="Auto"
          Grid.Row="0">

            <Button Text="Limpiar"
                BackgroundColor="Transparent"
                TextColor="Red"
                FontAttributes="Bold"
                HorizontalOptions="Start"
                VerticalOptions="Center"
                FontSize="16"
                Grid.Column="0"
                Clicked="Limpiar"/>

            <Label Text="Filtrar Resultados"
               FontSize="18"
               FontAttributes="Bold"
               TextColor="Black"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               Grid.ColumnSpan="3"
               Margin="0,10"/>

            <Image Source="X.png"
               WidthRequest="25"
               HeightRequest="25"
               HorizontalOptions="End"
               VerticalOptions="Center"
               Grid.Column="2">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="Cerrar"/>
                </Image.GestureRecognizers>
            </Image>
        </Grid>

        <VerticalStackLayout Padding="15"
                         Spacing="10"
                         VerticalOptions="Start"
                         HorizontalOptions="Start"
                         Grid.Row="1">

            
            <Label Text="Por Motivo:"
               FontSize="16"
               FontAttributes="Bold"
               TextColor="Black"
               Margin="0,0,0,8"/>

            <HorizontalStackLayout Spacing="4"
                   VerticalOptions="Center"
                   HorizontalOptions="Start">

                <CheckBox x:Name="tercero" IsChecked="False"
                      IsEnabled="True"
                      Color="#FF0C5896"
                      VerticalOptions="Center"/>

                <Label Text="Presupuesto insuficiente"
                   FontSize="14"
                   TextColor="Black"
                   VerticalOptions="Center"/>

            </HorizontalStackLayout>

            
            <HorizontalStackLayout Spacing="4"
                   VerticalOptions="Center"
                   HorizontalOptions="Start">

                <CheckBox x:Name="cuarto" IsChecked="False"
                      IsEnabled="True"
                      Color="#FF0C5896"
                      VerticalOptions="Center"/>

                <Label Text="Producto/servicio no disponible"
                   FontSize="14"
                   TextColor="Black"
                   VerticalOptions="Center"/>

            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="4"
                   VerticalOptions="Center"
                   HorizontalOptions="Start">

                <CheckBox x:Name="quinto" IsChecked="False"
                      IsEnabled="True"
                      Color="#FF0C5896"
                      VerticalOptions="Center"/>

                <Label Text="InformaciÃ³n incompleta o incorrecta"
                   FontSize="14"
                   TextColor="Black"
                   VerticalOptions="Center"/>

            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="4"
                   VerticalOptions="Center"
                   HorizontalOptions="Start">

                <CheckBox x:Name="sexto" IsChecked="False"
                          IsEnabled="True"
                          Color="#FF0C5896"
                          VerticalOptions="Center"/>

                <Label Text="Sobre stock de materiales"
                       FontSize="14"
                       TextColor="Black"
                       VerticalOptions="Center"/>

            </HorizontalStackLayout>

            <Label Text="Por Fecha:"
                   FontSize="16"
                   FontAttributes="Bold"
                   TextColor="Black"
                   Margin="0,0,0,8"/>
            
            <Label Text="Desde:"
                   FontSize="16"
                   FontAttributes="Bold"
                   TextColor="Black"
                   Margin="0,0,0,8"/>
            <HorizontalStackLayout Spacing="10">
                
                <DatePicker x:Name="FechaInicio"
                Format="dd/MM/yyyy"
                MaximumDate="{x:Static sys:DateTime.Now}" 
                DateSelected="FechaInicio_DateSelected"/>

            </HorizontalStackLayout>

            <Label Text="Hasta:"
                   FontSize="16"
                   FontAttributes="Bold"
                   TextColor="Black"
                   Margin="0,0,0,8"/>
            
            <HorizontalStackLayout>
                <DatePicker x:Name="FechaFin"
                 Format="dd/MM/yyyy"
                 MaximumDate="{x:Static sys:DateTime.Now}" 
                 />

            </HorizontalStackLayout>

            <Label Text="Por usuario:"
                   FontSize="16"
                   FontAttributes="Bold"
                   TextColor="Black"
                   Margin="0,0,0,8"/>

            <HorizontalStackLayout Spacing="4"
                   VerticalOptions="Center"
                   HorizontalOptions="Start">

                <CheckBox x:Name="usuario1" IsChecked="False"
                      IsEnabled="True"
                      Color="#FF0C5896"
                      VerticalOptions="Center"/>

                <Label Text="Oscar Daniel"
                   FontSize="14"
                   TextColor="Black"
                   VerticalOptions="Center"/>

            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="4"
                   VerticalOptions="Center"
                   HorizontalOptions="Start">

                <CheckBox x:Name="usuario2" IsChecked="False"
                      IsEnabled="True"
                      Color="#FF0C5896"
                      VerticalOptions="Center"/>

                <Label Text="Edgar Felipe"
                   FontSize="14"
                   TextColor="Black"
                   VerticalOptions="Center"/>

            </HorizontalStackLayout>
            
            <Button x:Name="btnBuscar"
                Text="Buscar"
                BackgroundColor="#FF0C5896"
                TextColor="White"
                FontAttributes="Bold" 
                HorizontalOptions="Start"
                Clicked="Buscar"
                VerticalOptions="Center"
                FontSize="16"
                CornerRadius="50"
                Grid.Column="0"
                Margin="150, 50, 0, 0"/>
        </VerticalStackLayout>


    </Grid>

</ContentPage>